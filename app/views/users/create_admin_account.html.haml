%h1#page-title Создание аккаунта администратора

= render :partial => "shared/errors", :locals => { :obj => @user }

= form_for @user, :url => { :action => 'create_admin_account' } do |f|
  %p.form-field
    = f.label :login, User.human_attribute_name(:login)
    = f.text_field :login
  %p.form-field
    = f.label :password, User.human_attribute_name(:password)
    = f.password_field :password
  %p.form-field
    = f.label :password_confirmation, User.human_attribute_name(:password_confirmation)
    = f.password_field :password_confirmation
  %p.form-field
    = f.submit "Создать аккаунт администратора"