/ Заголовок страницы
%h1.page-title= t(:login)

.notice= flash[:message]

= form_tag "/login", :method => "post" do
  %p.regform-field
    %dt= label_tag :login, "#{t(:login)}:"
    %dd= text_field_tag :login
  %p.regform-field
    %dt= label_tag :password, "#{t(:password)}:"
    %dd= password_field_tag :password
  = submit_tag "Войти в систему", :id => "login-button"