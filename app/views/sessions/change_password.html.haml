%h1#page-title= t('titles.change_password')

= render :partial => "shared/errors", :locals => { :obj => @user }

= form_for @user, :url => { :action => 'change_password' }, method: :put do |f|
  %p.regform-field
    %dt= label_tag :current_password, t('.enter_current_password')
    %dd= password_field_tag :current_password, nil, :size => 30
  %p.regform-field
    %dt=  f.label :password, t('.enter_new_password')
    %dd= f.password_field :password
  %p.regform-field
    %dt=  f.label :password_confirmation, t('.confirm_new_password')
    %dd= f.password_field :password_confirmation
  = f.submit t('.change_password_button'), :id => 'confirm-change-password'
  = link_to t('.back_to_profile_page'), :profile