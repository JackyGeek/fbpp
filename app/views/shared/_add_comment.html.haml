= form_tag :add_comment, id: "add-comment-form", method: 'post' do
  = hidden_field_tag 'comment[lecturer_id]', lecturer_id
  %p.form-field
    = label_tag :comment_anonymously, "Отображать моё имя", class: "inline"
    = check_box_tag 'comment[anonymously]', 1, true
  %p.form-field
    - mark_list = [['Негативный', 0], ['Нейтральный', 1], ['Позитивный', 2]]
    = label_tag :comment_mark, "Тип комментария", class: "inline"
    = select_tag 'comment[mark]', options_for_select(mark_list, Comment::MARKS[:neutral])
  %p.form-field
    = text_area_tag 'comment[body]', "", size: "60x9"
  %p.form-field
    = submit_tag "Оставить комментарий преподавателю"
    %span.button#cancel-add-comment Отменить